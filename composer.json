{
    "name": "funddy/persistence",
    "description": "Persistence component",
    "keywords": ["persistence", "database", "mongodb", "doctrine"],
    "homepage": "https://github.com/funddy/persistence",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Keyvan Akbary",
            "email": "keyvan@funddy.com",
            "homepage": "http://twitter.com/keyvanakbary/"
        },
        {
            "name": "Guillermo Pascual",
            "email": "pasku@funddy.com",
            "homepage": "http://twitter.com/pasku1/"
        }
    ],
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "doctrine/common": ">=2.2.0,<2.5-dev",
        "doctrine/mongodb": ">=1.0.0-beta1,<1.1-dev"
    },
    "suggest": {
        "doctrine/common": "Required if you are going to use Doctrine ORM",
        "doctrine/mongodb": "Required if you are going to use Doctrine Mongo ODM"
    },
    "autoload": {
        "psr-0": { "Funddy\\Component\\Persistence": "" }
    },
    "target-dir": "Funddy/Component/Persistence",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
